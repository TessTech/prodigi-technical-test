{
    "compilerOptions": {
      "target": "ES2015",
      "module": "AMD",
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "sourceRoot": "./src/ts",
      "outDir": "./dist/js",
      "rootDir": "./src",
      "declaration": true, 
      "moduleResolution": "node",
      "types": [
        "requirejs",
        "mapbox-gl",
        "jquery",
        "leaflet",
        "bootstrap",
        "./src/types",
        "popper.js",
        "popper.js",
        "jest",
        "google.analytics",
        "youtube"
      ],
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/ts"
    ]
  }
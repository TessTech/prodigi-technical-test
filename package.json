{
  "name": "tesstechnicaltest",
  "version": "2.8.1",
  "UIKitVersion": "2.8.1.dev.5",
  "description": "The new public UI kit.",
  "main": "dist/js/main.js",
  "style": "dist/css/main.css",
  "sass": "src/sass/main.sass",
  "repository": {
    "type": "git",
    "url": "https://github.com/TessTech/prodigi-technical-test.git"
  },
  "browserslist": [
    "Chrome >= 54",
    "Explorer >= 10",
    "ChromeAndroid >= 54",
    "Firefox >= 54",
    "Safari >= 9.1",
    "IOS >= 9",
    "Edge >= 14"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel lib fonts watch serve icons",
    "serve": "browser-sync start --config bs-config.js --no-open",
    "deploy": "npm-run-all --parallel css js lib icons fonts && node --experimental-modules ./build/deployment.mjs",
    "css": "shx rm -rf dist/css && npm-run-all css-lint css-compile css-prefix css-minify",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/sass/main.sass dist/css/main.css",
    "css-lint": "stylelint \"src/sass/**/*.sass\"",
    "css-minify": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output dist/css/main.min.css dist/css/main.css",
    "css-prefix": "postcss -c --replace \"dist/css/*.css\"",
    "fonts": "shx rm -rf dist/webfonts && cross-env-shell shx mkdir -p dist/webfonts/ && cross-env-shell shx cp -r src/webfonts dist/",
    "js": "rimraf dist/js/* && npm-run-all js-types js-lint js-babel js-minify js-version",
    "js-types": "tsc --noEmit",
    "js-lint": "eslint src/ts/** --ext .ts,.js",
    "js-lint-prod": "eslint src/ts/** --config .prod.eslintrc --ext .ts,.js",
    "js-babel": "babel ./src/ts --out-dir dist/js --extensions \".ts\"",
    "js-minify": "uglifyjs-folder dist/js -e -o dist/js",
    "js-version": "node --experimental-modules --experimental-json-modules ./build/js-version.mjs",
    "docs": "node --experimental-modules ./build/docs.mjs",
    "lib": "shx rm -rf dist/lib && npm-run-all lib-js lib-css",
    "lib-js": "cpx \"./src/lib/**/*.js\" dist/lib",
    "lib-css": "postcss \"src/lib/**/*.css\" -c --base src/lib/ --dir \"dist/lib/\"",
    "icons": "shx rm -rf dist/ico && cross-env-shell shx mkdir -p dist/ico/ && cross-env-shell shx cp -r src/ico dist/",
    "watch": "npm-run-all --parallel watch-*",
    "watch-docs": "nodemon --watch src/html/ -e html,json --exec \"npm run docs\"",
    "watch-css": "nodemon --watch src/sass/ -e sass,scss --exec \"npm run css && npm run docs\"",
    "watch-js": "nodemon --watch src/ts/ --ext ts --exec \"npm run js\"",
    "test": "npm run test-build && npm-run-all --parallel test-lint test-unit test-bundle-size",
    "test-build": "npm-run-all --parallel test-js",
    "test-lint": "npm-run-all js-types js-lint-prod css-lint",
    "test-unit": "jest --env=jsdom",
    "test-bundle-size": "npm-run-all --parallel css js && bundlesize",
    "test-js": "npm-run-all test-js-compile test-js-es6 test-js-i18n",
    "test-js-i18n": "node --experimental-modules ./build/i18n.mjs",
    "test-js-compile": "babel --no-babelrc --presets=@babel/preset-typescript --plugins=@babel/plugin-proposal-class-properties ./src/ts/ --out-dir tests/unit/js --extensions \".ts\"",
    "test-js-es6": "amdtoes6 --dir tests/unit/js --out tests/unit/js",
    "test-lib": "babel ./src/lib -d tests/unit/lib"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@types/bootstrap": "^4.5.0",
    "@types/jest": "^24.9.1",
    "@types/jquery": "^3.5.0",
    "@types/node": "^12.12.48",
    "bootstrap": "4.3.1",
    "jest": "24.8.0",
    "jquery": "3.4.1",
    "mustache": "^3.2.1",
    "node-gzip": "^1.1.2",
    "node-sass": "^4.14.1",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1",
    "postcss-nested": "^4.2.3",
    "sass": "^1.26.10",
    "sass-extract": "^2.1.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.2.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.6",
    "uglifyjs-folder": "^1.5.4"
  },
  "dependencies": {
    "@types/google.analytics": "0.0.40",
    "http-server": "^0.12.3",
    "jquery": "3.4.1"
  }
}
